<UserControl x:Class="PrototypeUI_2.View.ProjectManageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrototypeUI_2.View"
             xmlns:converter="clr-namespace:PrototypeUI_2.Converter"
             mc:Ignorable="d"  Background="{StaticResource Bg_Content}"
             d:DesignHeight="800" d:DesignWidth="1920">
    <UserControl.Resources>
        <converter:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <RadioButton Grid.Column="0" Style="{StaticResource RadioButton_xmxx}" Content="项目信息" x:Name="rbInformation"/>
            <Border Grid.Column="1" Background="{StaticResource Bd_Split}" Width="2" Margin="0,12,0,12" />
            <RadioButton Grid.Column="2" Style="{StaticResource RadioButton_gxtj}" Content="工程统计"  x:Name="rbStatistics"  IsChecked="True"/>
        </Grid>
        <Border Grid.Row="1" Height="80" Margin="30,30,30,20" Background="White" BorderBrush="{StaticResource Bd_Split}" BorderThickness="1">
            <Grid>
                <Label Content="委托单位" Margin="30,0,0,0" Style="{StaticResource LblProperty}"/>
                <ComboBox Margin="110,0,0,0" Style="{StaticResource CboNormal}" HorizontalAlignment="Left" Width="185" ItemsSource="{Binding EntrustingParts}"/>

                <Label Content="创建日期" Margin="330,0,0,0" Style="{StaticResource LblProperty}"/>
                <DatePicker Margin="410,0,0,0">
                    <DatePicker.Style>
                        <Style TargetType="DatePicker">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="BorderBrush" Value="{StaticResource Bd_Border}"/>
                            <Setter Property="Width" Value="185"/>
                            <Setter Property="Height" Value="35"/>
                            <Setter Property="Padding" Value="10,0,0,0"/>
                        </Style>
                    </DatePicker.Style>
                </DatePicker>
                <Label Content="工程名称" Margin="630,0,0,0" Style="{StaticResource LblProperty}"/>
                <TextBox  Margin="710,0,0,0" Style="{StaticResource txtNormal}" HorizontalAlignment="Left" Width="185" Text="{Binding NameKey}"/>
                <Button Style="{StaticResource BtnNormal}" Margin="950,0,0,0" Width="80" Content="查询"/>
                <Button Style="{StaticResource BtnNormal}" Margin="0,0,140,0" Width="105" HorizontalAlignment="Right" Content="新增项目"/>
                <Button Style="{StaticResource BtnNormal}"  Margin="0,0,25,0" Width="105" HorizontalAlignment="Right" Content="删除项目"/>
            </Grid>
        </Border>

        <Grid Grid.Row="2" Margin="30,0,30,20">
            <Grid Visibility="{Binding ElementName=rbInformation, Path=IsChecked, Converter={StaticResource BoolToVisibility}, ConverterParameter=true}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <DataGrid Grid.Row="0" ItemsSource="{Binding Projects}">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn  Width="38">
                            <DataGridTemplateColumn.Header>
                                <CheckBox Style="{StaticResource CbNormal}"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="项目编号" Width="70" Binding="{Binding SerialNo}"/>
                        <DataGridTextColumn Header="工程名称" Width="150" Binding="{Binding Name}"/>
                        <DataGridTextColumn Header="项目地点" Width="155" Binding="{Binding Address}"/>
                        <DataGridTextColumn Header="委托单位" Width="145" Binding="{Binding EntrustingPart}"/>
                        <DataGridTextColumn Header="检查单位" Width="215" Binding="{Binding DetectionPart}"/>
                        <DataGridTextColumn Header="批准人" Width="80" Binding="{Binding Approver}"/>
                        <DataGridTextColumn Header="审定人" Width="80" Binding="{Binding Verifier}"/>
                        <DataGridTextColumn Header="审核人" Width="80" Binding="{Binding Auditor}"/>
                        <DataGridTextColumn Header="校对人" Width="80" Binding="{Binding Checker}"/>
                        <DataGridTextColumn Header="编写人" Width="80" Binding="{Binding Author}"/>
                        <DataGridTextColumn Header="项目管理员" Width="120" Binding="{Binding Administrator}"/>
                        <DataGridTextColumn Header="内业操作员" Width="200" Binding="{Binding InnerOperator}"/>
                        <DataGridTextColumn Header="外业操作员" Width="200" Binding="{Binding OutterOperator}"/>
                        <DataGridTextColumn Header="操作" Width="*"/>
                    </DataGrid.Columns>

                </DataGrid>
                <Border Grid.Row="1" Height="85" BorderBrush="{StaticResource Bd_Split}" BorderThickness="1,0,1,1">
                    <local:Paging  DataContext="{Binding PagingVM}"/>
                </Border>
            </Grid>
            <Grid Visibility="{Binding ElementName=rbStatistics, Path=IsChecked, Converter={StaticResource BoolToVisibility}, ConverterParameter=true}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <DataGrid Grid.Row="0" ItemsSource="{Binding Statistics}">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn  Width="38">
                            <DataGridTemplateColumn.Header>
                                <CheckBox Style="{StaticResource CbNormal}"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="项目编号" Width="70" Binding="{Binding SerialNo}"/>
                        <DataGridTextColumn Header="工程名称" Width="150" Binding="{Binding Name}"/>
                        <DataGridTextColumn Header="道路数量" Width="155" Binding="{Binding Address}"/>
                        <DataGridTextColumn Header="管道数量" Width="85" Binding="{Binding EntrustingPart}"/>
                        <DataGridTextColumn Header="检测里程" Width="85" Binding="{Binding DetectionPart}"/>
                        <DataGridTextColumn Header="已判读公里" Width="85" Binding="{Binding Approver}"/>
                        <DataGridTextColumn Header="已检测里程" Width="85" Binding="{Binding Verifier}"/>
                        <DataGridTextColumn Header="开始时间" Width="100" Binding="{Binding Auditor}"/>
                        <DataGridTextColumn Header="计划完成时间" Width="100" Binding="{Binding Checker}"/>
                        <DataGridTextColumn Header="缺陷评估标准" Width="180" Binding="{Binding Author}"/>
                        <DataGridTextColumn Header="项目状态" Width="100" Binding="{Binding Administrator}"/>
                        <DataGridTextColumn Header="设备详情" Width="100" Binding="{Binding InnerOperator}"/>
                        <DataGridTextColumn Header="进度" Width="240" Binding="{Binding OutterOperator}"/>
                        <DataGridTextColumn Header="操作" Width="*"/>
                    </DataGrid.Columns>

                </DataGrid>
                <Border Grid.Row="1" Height="85" BorderBrush="{StaticResource Bd_Split}" BorderThickness="1,0,1,1">
                    <local:Paging  DataContext="{Binding PagingVM}"/>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
