<Window xmlns:Views="clr-namespace:PrototypeUI_1.Views"  x:Class="PrototypeUI_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrototypeUI_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <Image Source="Images/header.png" />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Background="{StaticResource ThemeColor}">
                <TreeView x:Name="treeView_Set" Style="{StaticResource X_TreeView}">
                    <TreeViewItem Header="系统设置" Style="{StaticResource X_TreeViewItem}">
                        <TreeViewItem/>
                        <TreeViewItem/>
                    </TreeViewItem>
                    <TreeViewItem Header="设计输入" Style="{StaticResource X_TreeViewItem}">
                        <TreeViewItem/>
                        <TreeViewItem/>
                    </TreeViewItem>
                    <TreeViewItem Header="设计预览" Style="{StaticResource X_TreeViewItem}">
                        <TreeViewItem/>
                        <TreeViewItem/>
                    </TreeViewItem>
                    <TreeViewItem Header="设计输出" Style="{StaticResource X_TreeViewItem}">
                        <TreeViewItem/>
                        <TreeViewItem/>
                    </TreeViewItem>
                    <TreeViewItem Header="数据管理" Style="{StaticResource X_TreeViewItem}">
                        <TreeViewItem/>
                        <TreeViewItem/>
                    </TreeViewItem>
                    <TreeViewItem Header="帮助" Style="{StaticResource X_TreeViewItem}"/>
                    <TreeViewItem Header="关于" Style="{StaticResource X_TreeViewItem}"/>
                </TreeView>
            </Grid>
            <Grid Grid.Column="1" Margin="0,-1,0,0">
                <Grid.Background>
                    <ImageBrush ImageSource="Images/bg.png" Stretch="UniformToFill"/>
                </Grid.Background>
                <Views:BomReportView />
            </Grid>
        </Grid>
    </Grid>
</Window>
